<!DOCTYPE glassfish-web-app PUBLIC "-//GlassFish.org//DTD
GlassFish Application Server 3.1 Servlet 3.0//EN"
        "http://glassfish.org/dtds/glassfish-web-app_3_0-1.dtd">

<glassfish-web-app>
<!--    mapowanie nazw/grup na role ( z web.xml)-->
    <security-role-mapping>
        <role-name>ADMIN</role-name>
        <group-name>Admin</group-name>
    </security-role-mapping>
    <security-role-mapping>
        <role-name>RESOURCEUSER</role-name>
        <group-name>ResourceUser</group-name>
    </security-role-mapping>
    <security-role-mapping>
        <role-name>RESOURCEMENAGER</role-name>
        <group-name>ResourceMenager</group-name>
    </security-role-mapping>
    <security-role-mapping>
        <role-name>BLOCKED</role-name>
        <group-name>Blocked</group-name>
    </security-role-mapping>


</glassfish-web-app>